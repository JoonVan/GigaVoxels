////////////////////////////////////////////////////////////////////////////////
//
// FRAGMENT SHADER
//
// Fullscreen quad rendering
//
////////////////////////////////////////////////////////////////////////////////

////////////////////////////////////////////////////////////////////////////////
// VERSION
////////////////////////////////////////////////////////////////////////////////

#version 400

////////////////////////////////////////////////////////////////////////////////
// INPUT
////////////////////////////////////////////////////////////////////////////////

in vec2 uv;

////////////////////////////////////////////////////////////////////////////////
// UNIFORM
////////////////////////////////////////////////////////////////////////////////

// Texture sampler for fullscreen quad rendering
uniform sampler2DRect uTextureSampler;

////////////////////////////////////////////////////////////////////////////////
// OUTPUT
////////////////////////////////////////////////////////////////////////////////

layout (location = 0) out vec4 oColor;

////////////////////////////////////////////////////////////////////////////////
// PROGRAM
////////////////////////////////////////////////////////////////////////////////
void main()
{
	//oColor = texelFetch( uTextureSampler, ivec2( gl_FragCoord.x, gl_FragCoord.y ) );

	ivec2 textureSize = textureSize( uTextureSampler, 0 );	// TO DO : use an Uniform
	oColor = texelFetch( uTextureSampler, ivec2( uv * textureSize ) );
}
